<%= render 'shared/errors', obj: @hobby %>

<%= form_for [@resume, @hobby] do |f| %>
  <fieldset>
    <legend><%= create_or_update(@hobby) %></legend>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.submit create_or_update(@hobby), class: 'button small radius' %>
  </fieldset>
<% end %>

<%= link_to "<i class=\"fi-arrow-left\"></i> Back".html_safe, edit_resume_path(@resume), title: "Back to Dashboard" %>
